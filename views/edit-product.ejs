<!DOCTYPE html>
<html lang="en">
    <!-- Head section here -->
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" type="text/css" href="/css/vendor.css">
    <!--Import Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <!-- Head section here -->
<body>
    <!-- Main section here -->
    <main>
        <!--Edit Product Body-->
        <div id="add-prd" class="container mt-5 w-75 mb-5">
            <h1 class="fw-bold">Edit Product</h1>
            <form method="post" action="/vendor/edit/<%= product._id %>" enctype="multipart/form-data">
                <label class="col-sm-2 col-form-label fw-bold" for="fname">Product name:</label>
                <input class="form-control mb-3 rounded p-2" type="text" id="fname" name="name" value="<%= product.name %>" required>
                <label class="col-sm-2 col-form-label fw-bold" for="stock">In Stock:</label>
                <input class="form-control mb-3 rounded p-2" type="number" id="stock" name="stockQuantity" value="<%= product.stockQuantity %>" min="0">
                <label class="col-sm-2 col-form-label fw-bold" for="price">Price:</label>
                <input class="form-control mb-3 rounded p-2" type="number" id="price" name="price" value="<%= product.price %>" required>
                <label class="col-sm-2 col-form-label fw-bold" for="description">Description:</label>
                <input class="form-control mb-3 rounded p-2" type="text" id="description" name="description" value="<%= product.description %>">
                <label class="col-sm-2 col-form-label fw-bold" for="product-image">Product Image:</label>
                <input class="form-control mb-5 rounded p-2" type="file" id="product-image" name="productImage">
                <input class="form-control mb-3 rounded p-2 w-25 m-auto" id="submit-product" type="submit" value="Update">
            </form>
        </div>
    </main> 

        <!--Js link-->
<script type="text/javascript" src="/js/customer-script.js"></script>
</body>
</html>
