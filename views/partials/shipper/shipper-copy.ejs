<div class="container">
    <section class="hub-cards">
        <div class="hub-card">
            <img src="hub1.jpg" alt="Hub 1">
            <p>description</p>
        </div>
        <div class="hub-card">
            <img src="hub2.jpg" alt="Hub 2">
            <p>description</p>
        </div>
        <div class="hub-card">
            <img src="hub3.jpg" alt="Hub 3">
            <p>description</p>
        </div>
    </section>

    <section class="order-table">
        <h2>Active Orders</h2>
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Delivery Address</th>
                    <th>Total Amount ($)</th>
                    <th>Status</th>
                    <th>Detail</th>
                </tr>
            </thead>
            <tbody>
                <!-- Use EJS tags to dynamically render active orders -->
                <%  activeOrders.forEach(function(order) {  %>
                    <tr>
                        <td><%=  order.orderID %></td>
                        <td><%=  order.customerName %></td>
                        <td><%=  order.deliveryAddress %></td>
                        <td><%=  order.totalAmount %></td>
                        <td><%=  order.status %></td>
                        <td><button>View Details</button></td>
                    </tr>
                <%  }); %>
            </tbody>
        </table>
    </section>

    <section class="order-table">
        <h2>Inactive Orders</h2>
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Delivery Address</th>
                    <th>Total Amount ($)</th>
                    <th>Status</th>
                    <th>Detail</th>
                </tr>
            </thead>
            <tbody>
                <!-- Use EJS tags to dynamically render inactive orders -->
                <%  inactiveOrders.forEach(function(order) { %>
                    <tr>
                        <td><%= order.orderID %></td>
                        <td><%= order.customerName %></td>
                        <td><%= order.deliveryAddress %></td>
                        <td><%= order.totalAmount %></td>
                        <td><%= order.status %></td>
                        <td><button>View Details</button></td>
                    </tr>
                <% });  %>
            </tbody>
        </table>
    </section>
</div>