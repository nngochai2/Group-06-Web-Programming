<div class="container">
    <section class="order-table">
        <h2>Active Orders</h2>
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Delivery Address</th>
                    <th>Total Amount ($)</th>
                    <th>Status</th>
                    <th>Detail</th>
                </tr>
            </thead>
            <tbody>
                <% activeOrders.forEach(order => { %>
                    <tr>
                        <td><%= order._id %></td>
                        <td><%= order.customerName %></td>
                        <td><%= order.deliveryAddress %></td>
                        <td><%= order.totalAmount %></td>
                        <td><%= order.status %></td>
                        <td class="order-detail">
                            <a href="/order/detail/<%= order._id %>">View Details</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </section>
    
    <section class="order-table">
        <h2>Inactive Orders</h2>
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Delivery Address</th>
                    <th>Total Amount ($)</th>
                    <th>Status</th>
                    <th>Detail</th>
                </tr>
            </thead>
            <tbody>
                <% inactiveOrders.forEach(order => { %>
                    <tr>
                        <td><%= order._id %></td>
                        <td><%= order.customerName %></td>
                        <td><%= order.deliveryAddress %></td>
                        <td><%= order.totalAmount %></td>
                        <td><%= order.status %></td>
                        <td class="order-detail">
                            <a href="/order/detail/<%= order._id %>">View Details</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </section>
    

